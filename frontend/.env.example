# STORM Frontend Environment Variables
# Copy this to .env.local for local development

# =============================================================================
# Backend API Configuration (Required)
# =============================================================================

# URL of the STORM API backend
# For local development: http://localhost:8000
# For production: Your deployed backend URL (e.g., https://storm-api-xxx.vercel.app)
STORM_API_URL=http://localhost:8000

# =============================================================================
# Optional: Analytics & Monitoring
# =============================================================================

# Vercel Analytics (automatically configured on Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode for more verbose logging
# NEXT_PUBLIC_DEBUG=false
