# Database Configuration
# For local development: postgresql+asyncpg://user:password@localhost:5432/storm_db
# For Vercel Postgres: Copy from Vercel dashboard (Settings > Environment Variables)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database?sslmode=require
POSTGRES_URL=postgres://...  # Vercel provides this
POSTGRES_PRISMA_URL=postgres://...?pgbouncer=true  # Vercel provides this (for connection pooling)
POSTGRES_URL_NO_SSL=postgres://...  # Vercel provides this
POSTGRES_URL_NON_POOLING=postgres://...  # Vercel provides this
POSTGRES_USER=...
POSTGRES_HOST=...
POSTGRES_PASSWORD=...
POSTGRES_DATABASE=...

# Redis/KV Configuration
# For local development: redis://localhost:6379/0
# For Vercel KV: Copy from Vercel dashboard (Settings > Environment Variables)
REDIS_URL=redis://...
KV_URL=redis://...  # Vercel KV provides this
KV_REST_API_URL=https://...  # Vercel KV provides this
KV_REST_API_TOKEN=...  # Vercel KV provides this
KV_REST_API_READ_ONLY_TOKEN=...  # Vercel KV provides this

# LLM Providers - Vercel AI Gateway (Primary)
# Get your key from Vercel Dashboard > AI > Gateway
OPENAI_API_KEY=vck_your_vercel_ai_gateway_key
VERCEL_AI_GATEWAY_URL=https://ai-gateway.vercel.sh/v1
DEFAULT_MODEL=xai/grok-4.1-fast-reasoning

# Alternative LLM Providers (optional fallbacks)
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=AI...

# Search APIs (for research)
# Tavily - Get your key from https://tavily.com/ (required for grounded research)
TAVILY_API_KEY=tvly-...
# Google Search (alternative)
GOOGLE_SEARCH_API_KEY=...
GOOGLE_SEARCH_ENGINE_ID=...
BING_SEARCH_API_KEY=...

# Z.AI / GLM-Image Configuration (for slideshow image generation)
# Get your API key from https://z.ai/
# Optional: If not set, will use DALL-E 3 via Vercel AI Gateway as fallback
ZAI_API_KEY=...
ZAI_API_URL=https://api.z.ai/api/paas/v4
GLM_IMAGE_MODEL=glm-image

# Application Settings
APP_NAME=STORM Content Generation API
APP_VERSION=1.0.0
DEBUG=True

# CORS Settings (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,https://storm-research.vercel.app,https://madezmedia.co,https://sonicbrand-ai.vercel.app,https://ezinfluencer360.com

# Webhook Settings
WEBHOOK_SECRET=your-webhook-secret-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Session Settings
SESSION_SECRET=your-session-secret-here
